<form method="post" action="/figures/new">

  <label>Figure Name: </label><input type="text" name="figure[name]" id="figure_name">
  <br>
  <label>Choose a title or create a new one: </label>
    <% Title.all.each do |title| %>
    <br>
      <input type="checkbox" name="figure[title_ids][]" value="<%=title.id%>" id="title_<%=title.id%>"><%=title.name%></input>
    <% end %>
    <br>
    <label>New Title: </label><input type="text" name="title[name]" id="new_title">
    <br>

  <label>Choose a landmark or create a new one: </label>
    <% Landmark.all.each do |landmark| %>
    <br>
      <input type="checkbox" name="figure[landmark_ids][]" value="<%=landmark.id%>" id="landmark_<%=landmark.id%>"><%=landmark.name%></input>
      <% end %>
      <br>
      <label>New Landmark: </label><input type="text" name="landmark[name]" id="new_landmark">
  <br>
  <input type="submit" value="Create New Figure">
</form>